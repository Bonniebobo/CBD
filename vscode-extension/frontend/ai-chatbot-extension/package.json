{
  "name": "ai-chatbot-extension",
  "displayName": "AI Chatbot Assistant",
  "description": "AI-powered coding assistant with repository awareness",
  "version": "0.1.0",
  "publisher": "your-publisher",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-chatbot.openChat",
        "title": "Open AI Chat",
        "category": "AI Chatbot"
      },
      {
        "command": "ai-chatbot.openChatInEditor",
        "title": "Open AI Chat in Editor",
        "category": "AI Chatbot"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-chatbot",
          "title": "AI Assistant",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "ai-chatbot": [
        {
          "id": "ai-chatbot.chatView",
          "name": "Chat"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "ai-chatbot.openChat",
          "when": "view == ai-chatbot.chatView",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "ai-chatbot.openChatInEditor",
          "group": "ai-chatbot",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "title": "AI Chatbot",
      "properties": {
        "ai-chatbot.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for AI service"
        },
        "ai-chatbot.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "AI model to use"
        },
        "ai-chatbot.enableRepositoryAnalysis": {
          "type": "boolean",
          "default": true,
          "description": "Enable repository analysis features"
        },
        "ai-chatbot.backendUrl": {
          "type": "string",
          "default": "http://localhost:3001",
          "description": "Backend API URL for AI processing"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.82.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
